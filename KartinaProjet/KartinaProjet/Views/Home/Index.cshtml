@model KartinaProjet.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<!--Carousel -->
<div class="row">
    <div class="bd-example">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Images/Carousel1.png" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block w-25">
                        <p class="h1 text-left font-weight-bold text-uppercase">Artistes primés à l'honneur</p>
                        <p class="font-weight-light text-left h6">Découvrez notre sélection d'artistes primés</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/Images/Carousel2.png" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block w-25">
                        <p class="h1 text-left font-weight-bold text-uppercase">I'm not a trophy</p>
                        <p class="font-weight-light text-left h6">Nouvelle collection : l'art au service de la cause animale</p>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!--<div class="row d-flex justify-content-center bg-light shadow-sm pt-3 pb-2">
  <small class="font-weight-bold align-middle h6 text-black-50">PHOTOGRAPHIE D'ART EN ÉDITION LIMITÉE</small>
</div>-->

<div class="container-fluid mx-5">
    <div class="row d-flex justify-content-start mt-3">
        <p class="font-weight-lighter text-black-50 display-4 mb-2">Photographies d’art</p>
    </div>
    <div class="row font-weight-bold">
        <h5 class="font-weight-light d-flex align-items-center flex-wrap mb-3">
            Œuvres en édition limitée
            et numérotée avec certificat d'authenticité
        </h5>
    </div>
</div>

<div class="container-fluid">
    <div class="row mt-4 px-4">
        @foreach (var photo in Model.ListTopPhoto)
        {
            <div class="col-12 col-sm-6 col-md-4 px-4 mb-4 d-flex justify-content-center">
                <div class="card border-0">
                    <img src="@photo.LienURL" class="card-img-top carte" alt="@photo.NomPh">
                    <div class="card-body px-0 py-2">
                        <div class="d-flex justify-content-between">

                            @if (!string.IsNullOrEmpty(photo.Artiste.Pseudonyme))
                            {
                                <h5 class="card-title mb-0 align-middle">
                                    @(photo.Artiste.Pseudonyme + ", " + photo.NomPh)
                                </h5>
                            }
                            else
                            {
                                <h5 class="card-title mb-0 align-middle">
                                    @(photo.Artiste.Prenom + " " + photo.Artiste.Nom + ", " + photo.NomPh)
                                </h5>
                            }
                            <h5 class="card-title font-weight-light mb-1"><small>à partir de</small></h5>
                        </div>
                        <div class="d-flex justify-content-between pt-0">
                            <h6 class="card-title font-weight-light align-items-center mb-0">
                                Edition Limitée
                            </h6>
                            @*<h5 class="card-title font-weight-light">@(photo.PrixMini * Model.KartinaMaj.coeff)</h5>*@
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!--Bouton explorer la collection-->
    <div class="row mt-4 px-4 d-flex justify-content-center">
        <div class="col-10 col-sm-8 col-md-4">
            <button type="button" class="btn btn-outline-dark btn-block font-weight-light">
                Explorer la
                collection
            </button>
        </div>
    </div>
</div>

@*Les thèmes*@
<div class="container-fluid mt-5 border-top">
    <div class="row d-flex justify-content-start mt-3 mx-5">
        <p class="font-weight-lighter text-black-50 display-4 mb-2">Thèmes</p>
    </div>
    <div class="row font-weight-bold mx-5">
        <h5 class="font-weight-light d-flex align-items-center text-black-50 flex-wrap mb-3">
            Nous avons sélectionné pour
            vous les thèmes les plus populaires
        </h5>
    </div>
</div>
<div class="row">
    @foreach (var theme in Model.ListTheme)
    {
        <div class="col-sm-12 col-md-6 p-0">
            <div class="card bg-white text-white">
                <img src="@theme.UrlImage" class="card-img-top border-white theme-img" alt="Image1">
                <div class="card-img-overlay d-flex justify-content-end align-items-center flex-column px-0">
                    <p class="card-title display-4 bg-white text-dark font-weight-lighter w-100 text-center mb-0 pb-1">@theme.Libelle</p>
                    <p class="card-text h4 text-black-50 font-weight-light bg-white w-100 text-center pb-2 shadow-sm">
                       @theme.Slogan
                    </p>
                    <div class="w-100 d-flex justify-content-center">
                        <button type="button" class="btn btn-outline-light shadow-sm font-weight-normal">
                            Parcourir la
                            collection
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<!--Bouton explorer les thèmes-->
<div class="row mt-5 px-4 d-flex justify-content-center">
    <div class="col-sm-8 col-md-4 col-lg-4">
        <button type="button" class="btn btn-outline-dark btn-block font-weight-light">
            Explorer tous les thèmes
        </button>
    </div>
</div>
